{{>header-navbar}}
{{> messages}}
<a href="/logout">
    <div class="logout-button">Logout</div>
</a>
<a href="/api/reset">
    <div class="reset-button">Reset</div>
</a>
<div class="dashboard-block">
    <div class="header">
        <h3>Expedition</h3>
    </div>
    <div class="line-break"></div>
    <div class="expeditions-block">
        <table>
            <thead>
                <tr>
                    <th>Rocket</th>
                    <th>Cost</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each amenities}}
                    <tr>
                        <td>{{ dataValues.name }}</td>
                        <td>${{ dataValues.cost }} </td>
                        <td><button data-add data-amenity-id={{ dataValues.id }}>Choose</button></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
<script src="/assets/js/expedition-configuration/amenities.js"></script>